# ========================================
# KNOWLEDGE INSIGHTS AI CONFIGURATION (2025)
# ========================================
# AI-Driven semantic categorization for knowledge insights system
# Replaces hardcoded keyword matching with intelligent analysis

# Core AI Configuration
ENABLE_AI_KNOWLEDGE_CATEGORIZATION=true    # Enable AI-driven categorization
KNOWLEDGE_CATEGORIZATION_MODEL=gpt-4       # AI model for categorization
KNOWLEDGE_CONFIDENCE_THRESHOLD=0.7         # Minimum confidence for AI categorization
KNOWLEDGE_CACHE_TTL_SECONDS=3600          # Cache duration for categorization results
MAX_KNOWLEDGE_TAGS=10                      # Maximum tags per knowledge item
DEFAULT_KNOWLEDGE_LANGUAGE=auto            # Language detection (auto/en/it/es/fr/de)

# Fallback Configuration (when AI unavailable)
FALLBACK_KNOWLEDGE_CATEGORIES=discovery,optimization,success_pattern,constraint,learning,strategy,analysis,research
FALLBACK_DEFAULT_TAGS=general,insight,knowledge,business,data

# Performance Configuration
KNOWLEDGE_MAX_CONTENT_LENGTH=2000          # Max content length for processing
KNOWLEDGE_BATCH_SIZE=10                    # Batch size for bulk processing
KNOWLEDGE_TIMEOUT_SECONDS=30               # AI request timeout

# Feature Flags
KNOWLEDGE_ENABLE_CACHING=true              # Enable result caching
KNOWLEDGE_ENABLE_LANGUAGE_DETECTION=true   # Enable language detection
KNOWLEDGE_ENABLE_CONFIDENCE_SCORING=true   # Enable confidence scoring
KNOWLEDGE_ENABLE_SEMANTIC_TAGS=true        # Enable semantic tag generation
