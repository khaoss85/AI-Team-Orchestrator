# Copy this file to .env and fill in your credentials
OPENAI_API_KEY=your-openai-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# Goal-Driven System (required for Enhanced Director)
ENABLE_GOAL_DRIVEN_SYSTEM=true
AUTO_CREATE_GOALS_FROM_WORKSPACE=true
GOAL_VALIDATION_INTERVAL_MINUTES=20
MAX_GOAL_DRIVEN_TASKS_PER_CYCLE=5
GOAL_COMPLETION_THRESHOLD=80

# Asset & Deliverable Configuration
USE_ASSET_FIRST_DELIVERABLE=true
PREVENT_DUPLICATE_DELIVERABLES=true
MAX_DELIVERABLES_PER_WORKSPACE=3
DELIVERABLE_READINESS_THRESHOLD=100           # ðŸ”´ CHANGED: 50 -> 100 (require FULL completion)
MIN_COMPLETED_TASKS_FOR_DELIVERABLE=2        # Minimum completed tasks before deliverable
DELIVERABLE_CHECK_COOLDOWN_SECONDS=30

# Task & Phase Management
PHASE_PLANNING_COOLDOWN_MINUTES=5
MAX_PENDING_TASKS_FOR_TRANSITION=8
ENABLE_ENHANCED_PHASE_TRACKING=true
FINALIZATION_TASK_PRIORITY_BOOST=1000

# Quality Assurance
ENABLE_AI_QUALITY_ASSURANCE=true
ENABLE_DYNAMIC_AI_ANALYSIS=true
ENABLE_AUTO_PROJECT_COMPLETION=true

# Enhanced Director Configuration
ENABLE_ENHANCED_DIRECTOR=true
DIRECTOR_USE_STRATEGIC_GOALS=true

# Enhanced Reasoning Configuration (o3/Claude style)
ENABLE_DEEP_REASONING=true
DEEP_REASONING_THRESHOLD=0.7        # Complexity threshold to trigger deep reasoning
REASONING_CONFIDENCE_MIN=0.6        # Minimum confidence level for recommendations
MAX_REASONING_ALTERNATIVES=3        # Max alternatives to evaluate

# Rate Limiting & Performance
OPENAI_RPM_LIMIT=3000              # Requests per minute limit
VALIDATION_CACHE_TTL=600           # Cache validation results for 10 minutes
ENABLE_AGGRESSIVE_CACHING=true     # Enable intelligent caching
AUTO_REFRESH_INTERVAL=600          # Frontend auto-refresh every 10 minutes

# ========================================
# PURE AI DOMAIN CLASSIFICATION (NEW 2025)
# ========================================
# Replaces all keyword-based domain detection with pure AI semantic understanding

# Core AI Domain Configuration
ENABLE_PURE_AI_DOMAINS=false       # Enable pure AI domain classification (set to true to activate)
PURE_AI_ROLLOUT_PERCENTAGE=0       # Gradual rollout percentage (0-100)
AI_DOMAIN_CONFIDENCE_THRESHOLD=0.7 # Minimum confidence for AI classification

# AI Models Configuration
AI_DOMAIN_PRIMARY_MODEL=gpt-4o     # Primary model for domain classification
AI_DOMAIN_FALLBACK_MODEL=gpt-3.5-turbo  # Fallback model if primary fails

# Semantic Memory Configuration
ENABLE_SEMANTIC_MEMORY=true        # Enable semantic memory for pattern learning
EMBEDDING_MODEL=text-embedding-3-small  # Model for generating embeddings
SIMILARITY_THRESHOLD=0.85          # Threshold for semantic similarity matching
MEMORY_TTL_DAYS=90                 # How long to keep memory entries

# Migration Configuration (temporary during transition)
DOMAIN_DETECTION_METHOD=keywords   # "keywords" (legacy) or "ai" (pure AI)
LOG_BOTH_CLASSIFICATIONS=true      # Log both AI and keyword results for comparison

