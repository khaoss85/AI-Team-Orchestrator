    <style>
    .continue-reading-section {
        margin: 2rem 0;
        padding: 1.5rem;
        text-align: center;
        background: linear-gradient(135deg, #667eea10, #764ba210);
        border-radius: 15px;
    }
    
    .continue-reading-header h3 {
        color: #2c3e50;
        margin-bottom: 1rem;
    }
    
    .continue-reading-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
